<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:background="@drawable/white_ripple2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/white_ripple2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="@dimen/news_imga_width"
            android:layout_height="@dimen/news_imga_height"
            android:contentDescription="@string/news_describle"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:paddingLeft="8dp"
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="xxxxxxxxxxxxxxxxx"
            android:textColor="#2b2b2b"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/news_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="12314asdfad"
            android:textColor="#999999"
            android:textSize="13dp"
            android:layout_below="@+id/news_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:padding="1dp"
            android:text="1111"
            android:textColor="@color/md_grey_600"
            android:textSize="12dp"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:background="@color/md_grey_400"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>


